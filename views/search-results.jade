extends layout

block content
  .container
    include search
    .row
      .col-xs-12
        h1= title
    .row     
      if total_count > 0
        .col-xs-12
          p #[strong #{total_count}] users
          each item in users
            div.d-flex
              div.p-2
                a(href='#{item.html_url}')
                  img(src="#{item.avatar_url}",width='50',height='50')
              div.p-2.flex-grow-1
                a(href='#{item.html_url}')
                  div.login= item.login
      else
        p No users found!

    include pagination